<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Register</title>
  <script>
    // Optional: clientâ€‘side password matching
    function validateForm(event) {
      var password = document.getElementById("password").value;
      var confirmPassword = document.getElementById("confirmPassword").value;
      if (password !== confirmPassword) {
        event.preventDefault();
        document.getElementById("error").innerText = "Passwords do not match!";
      }
    }
  </script>
</head>
<body>
  <h2>Register</h2>
  <% if (error) { %>
    <p style="color:red;"><%= error %></p>
  <% } %>
  <form action="/register" method="POST" onsubmit="validateForm(event)">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" required /><br/><br/>

    <label for="phone">Phone:</label>
    <input type="text" name="phone" id="phone" required /><br/><br/>

    <label for="mail">Email:</label>
    <input type="email" name="mail" id="mail" required /><br/><br/>

    <label for="aadhar">Aadhar:</label>
    <input type="text" name="aadhar" id="aadhar" required /><br/><br/>

    <label for="password">Create Password:</label>
    <input type="password" name="password" id="password" required /><br/><br/>

    <label for="confirmPassword">Confirm Password:</label>
    <input type="password" name="confirmPassword" id="confirmPassword" required /><br/><br/>

    <span id="error" style="color:red;"></span><br/>
    <button type="submit">Register</button>
  </form>
  <a href="/">Go to Login</a>
</body>
</html>
